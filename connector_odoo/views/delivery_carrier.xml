<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_odoo_delivery_carrier_bind_ids" model="ir.ui.view">
      <field name="name">odoo.delivery.carrier</field>
      <field name="model">delivery.carrier</field>
      <field name="inherit_id" ref="delivery.view_delivery_carrier_form" />
      <field name="arch" type="xml">
        <notebook position="inside">
            <page string="Connector" name="connector">
                <group string="Odoo Bindings">
                    <field name="bind_ids" readonly="1" nolabel="1" />
                </group>
            </page>
        </notebook>
      </field>
    </record>


    <record id="view_odoo_delivery_carrier_tree" model="ir.ui.view">
      <field name="name">odoo.delivery.carrier</field>
      <field name="model">odoo.delivery.carrier</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="backend_id" />
          <field name="odoo_id" />
          <field name="external_id" />
        </tree>
      </field>
    </record>

    <record id="view_odoo_delivery_carrier_form" model="ir.ui.view">
      <field name="name">odoo.delivery.carrier.form</field>
      <field name="model">odoo.delivery.carrier</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name" placeholder="Name" readonly="1" />
              </h1>
            </div>
            <group>
              <field name="backend_id" />
              <field name="odoo_id" />
              <field name="external_id" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_odoo_delivery_carrier_search" model="ir.ui.view">
        <field name="name">odoo.delivery.carrier.search</field>
        <field name="model">odoo.delivery.carrier</field>
        <field eval="100" name="priority" />
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name" />
                <field name="external_id" />
                <field name="odoo_id" />
                <field name="backend_id" />
            </search>
        </field>
    </record>
</odoo>
